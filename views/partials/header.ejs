<style>
  :root {
    --primary-color: #f97316; /* Màu cam chính, bạn có thể thay đổi mã hex */
    --secondary-color: #fed7aa; /* Màu cam nhạt cho gradient, bạn có thể thay đổi */
    --text-color: #1f2937; /* Màu chữ chính (xám đậm) */
    --hover-color: #ea580c; /* Màu khi hover link */
    --active-color: #c2410c; /* Màu cho link đang active (như Theo ngày) */
  }

  header {
    background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
    transition: all 0.3s ease-in-out;
  }

  .logo-svg {
    transition: transform 0.3s ease;
  }

  .logo-svg:hover {
    transform: rotate(90deg) scale(1.1);
  }

  nav a:hover {
    color: var(--hover-color);
  }

  .active-link {
    color: var(--active-color);
    font-weight: 600;
  }

  #mobile-menu {
    background: var(--secondary-color);
  }
</style>

<header class="px-6 py-4 flex items-center justify-between shadow-lg text-[var(--text-color)] rounded-b-xl animate-fade-in">
  <!-- Logo and Company Name -->
  <div class="flex items-center space-x-4">
    <!-- Placeholder SVG Logo (Star) -->
     
    <!-- <svg class="h-12 w-12 logo-svg" fill="none" stroke="var(--text-color)" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.783-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
    </svg> -->
    <img src="/images/logo1.png" alt="Logo" class="h-12 w-auto logo-svg" />
    <span class="text-xl md:text-2xl font-bold tracking-tight">
      CÔNG TY CỔ PHẦN CHỮ KÝ SỐ VI NA
    </span>
  </div>

  <!-- Navigation and User Actions -->
  <% if (typeof user !== 'undefined') { %>
    <div class="flex items-center space-x-6">
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-6 text-base font-medium">
        <a href="/thongke/pdf" class="hover:[var(--hover-color)] transition-colors duration-200">PDF</a>
        <a href="/thongke/xml" class="hover:[var(--hover-color)] transition-colors duration-200">XML</a>
        <a href="/thongke/ngay" class="active-link hover:[var(--hover-color)] transition-colors duration-200">Theo ngày</a>
      </nav>
      <a href="/logout" class="text-lg font-medium hover:text-red-500 transition-colors duration-200">Đăng xuất</a>

      <!-- Hamburger Menu for Mobile -->
      <button id="menu-toggle" class="md:hidden text-[var(--text-color)] focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu (Hidden by default) -->
    <div id="mobile-menu" class="hidden md:hidden w-full absolute top-16 left-0 shadow-lg">
      <nav class="flex flex-col items-center py-4 space-y-4 text-base font-medium">
        <a href="/thongke/pdf" class="hover:[var(--hover-color)] transition-colors duration-200">PDF</a>
        <a href="/thongke/xml" class="hover:[var(--hover-color)] transition-colors duration-200">XML</a>
        <a href="/thongke/ngay" class="active-link hover:[var(--hover-color)] transition-colors duration-200">Theo ngày</a>
        <a href="/logout" class="text-lg font-medium hover:text-red-500 transition-colors duration-200">Đăng xuất</a>
      </nav>
    </div>
  <% } %>
</header>

<!-- JavaScript for Hamburger Menu Toggle -->
<script>
  document.getElementById('menu-toggle')?.addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu.classList.toggle('hidden');
  });
</script>

